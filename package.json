{
  "name": "ebac-shop-quality-assurance",
  "version": "1.0.0",
  "description": "ebac-shop-quality-assurance é um projeto de Engenharia de Qualidade desenvolvido no contexto do curso da EBAC, com o objetivo de aplicar boas práticas de garantia da qualidade em um sistema de e-commerce. O projeto contempla testes automatizados web e de API, organizados de forma modular, utilizando Cypress em ambiente Node.js, com foco na validação de regras de negócio, rastreabilidade de requisitos e melhoria contínua da qualidade do software.",
  "homepage": "https://github.com/Eduferr/ebac-shop-quality-assurance#readme",
  "bugs": {
    "url": "https://github.com/Eduferr/ebac-shop-quality-assurance/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eduferr/ebac-shop-quality-assurance.git"
  },
  "license": "MIT",
  "author": "EduardoFerreira",
  "type": "commonjs",
  "main": "index.js",
"scripts": {

    "clean:api": "rimraf --glob \"allure/api-tests/api-results/**\"",
    "clean:ui": "rimraf --glob \"allure/ui-tests/ui-results/**\"",
    "clean:mob": "rimraf --glob \"allure/mobile-tests/mobile-results/**\"",

    "test:ui": "npm run clean:ui && cypress run",
    "test:api": "npm run clean:api && cucumber-js",
    "test:mob": "npm run clean:mob && npx wdio run ./wdio.conf.js",
    "test:perf:login": "k6 run ./performance/run.login.js",
    "test:perf:produto": "k6 run ./performance/run.produto.get.js",
    "test:perf:all": "npm run test:perf:login && npm run test:perf:produto",

    "test:all": "npm run test:ui && npm run test:api && npm run test:mob && npm run test:perf",
    
    "report:ui": "npx allure generate allure/ui-tests/ui-results -o allure/ui-tests/ui-report --clean",
    "report:api": "npx allure generate allure/api-tests/api-results -o allure/api-tests/api-report --clean",
    "report:mob": "npx allure generate allure/mobile-tests/mobile-results -o allure/mobile-tests/mobile-report --clean",
    
    "open_report:ui": "npx allure open allure/ui-tests/ui-report",
    "open_report:api": "npx allure open allure/api-tests/api-report",
    "open_report:mob": "npx allure open allure/mobile-tests/mobile-report",
    "open_report:perf:login": "start performance/reports/login/login-report.html",
    "open_report:perf:produto": "start performance/reports/produto/produto-report.html",
    "open_report:perf:all": "npm run open_report:perf:login && npm run open_report:perf:produto"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^24.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.8",
    "@cucumber/cucumber": "^12.5.0",
    "@faker-js/faker": "^9.9.0",
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "@wdio/allure-reporter": "^9.18.0",
    "@wdio/cli": "^9.18.3",
    "@wdio/local-runner": "^9.18.3",
    "@wdio/mocha-framework": "^9.18.0",
    "@wdio/spec-reporter": "^9.18.0",
    "allure-commandline": "^2.36.0",
    "allure-cucumberjs": "^3.4.4",
    "allure-js-commons": "^3.4.4",
    "appium-uiautomator2-driver": "^4.2.6",
    "chai": "^6.2.2",
    "cypress": "^15.7.1",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.1",
    "faker": "^6.6.6",
    "mocha": "^11.7.5",
    "supertest": "^7.2.2"
  }
}
